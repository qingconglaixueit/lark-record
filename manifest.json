{
  "manifest_version": 3,
  "name": "飞书记录助手",
  "version": "1.0.0",
  "description": "帮助用户快速将数据记录到飞书多维表格，并在字段完成时发送消息通知",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://open.feishu.cn/*",
    "https://*.feishu.cn/*",
    "http://localhost:8080/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  }
}